plugin.tx_w4cookiebar {

    view {
        layoutRootPath  = EXT:w4_cookiebar/Resources/Private/fluid_styled_content/Layouts/
        templateRootPath = EXT:w4_cookiebar/Resources/Private/fluid_styled_content/Templates/
        partialRootPath  = EXT:w4_cookiebar/Resources/Private/fluid_styled_content/Partials/
    }

    configuration {
        cookieButtonMapsHidden = 0
        cookieKey = w4cookiebar
        cookieName {
            # this is needed for GTM manipulation
            all = default_cookiebar_a
            dismissed = default_cookiebar_dismissed
        }
    }

}
